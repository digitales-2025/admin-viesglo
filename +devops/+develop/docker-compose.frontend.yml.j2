services:
  {{ project_name }}-{{ project_stage }}-frontend:
    image: ${{ project_name | upper }}_FRONTEND_REGISTRY_URL:${{ project_name | upper }}_FRONTEND_VERSION
    container_name: {{ project_name }}-{{ project_stage }}-frontend
    restart: unless-stopped
    depends_on:
      {{ project_name }}-{{ project_stage }}-backend:
        condition: service_healthy
    environment:
      - TZ=America/Lima
    env_file:
      - .env.frontend
    networks:
      - traefik3_proxy
      - {{ project_name }}-{{ project_stage }}-network
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.{{ project_name }}-{{ project_stage}}-frontend.rule=Host(`{{ project_name }}-{{ project_stage }}-frontend.acide.win`)"
      - "traefik.http.routers.{{ project_name }}-{{ project_stage}}-frontend.entrypoints=websecure"
      - "traefik.http.routers.{{ project_name }}-{{ project_stage}}-frontend.tls=true"
      - "traefik.http.routers.{{ project_name }}-{{ project_stage}}-frontend.tls.certresolver=dns-cloudflare"
      - "traefik.http.routers.{{ project_name }}-{{ project_stage}}-frontend.tls.domains[0].main=acide.win"
      - "traefik.http.routers.{{ project_name }}-{{ project_stage}}-frontend.tls.domains[0].sans=*.acide.win"
      - "traefik.http.services.{{ project_name }}-{{ project_stage}}-frontend.loadbalancer.server.port=3000"
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:3000 || exit 1"]
      interval: 5s
      timeout: 5s
      retries: 2
      start_period: 5s

